if has('vim_starting')
   set nocompatible               
   set runtimepath+=~/.vim/bundle/neobundle.vim/
endif

call neobundle#begin(expand('~/.vim/bundle/'))

NeoBundleFetch 'Shougo/neobundle.vim'

" Custom bundles
NeoBundle 'airblade/vim-gitgutter'
NeoBundle 'bling/vim-airline'
NeoBundle 'reedes/vim-colors-pencil'
NeoBundle 'junegunn/goyo.vim'
NeoBundle 'junegunn/limelight.vim'
NeoBundle 'vim-pandoc/vim-pandoc-syntax'
NeoBundle 'vim-pandoc/vim-pandoc'
NeoBundle 'sjl/gundo.vim'
NeoBundle 'tpope/vim-fugitive'
NeoBundle 'Valloric/YouCompleteMe'
NeoBundle 'tpope/vim-surround'
NeoBundle 'dhruvasagar/vim-table-mode'
NeoBundle 'terryma/vim-multiple-cursors'
NeoBundle 'beloglazov/vim-online-thesaurus'
NeoBundle 'vim-scripts/YankRing.vim'
NeoBundle 'wincent/command-t'

call neobundle#end()

filetype plugin indent on
set nocompatible

" Check for missing bundles
NeoBundleCheck

" Custom settings
syntax on
set expandtab
set shiftwidth=2
set autoindent
set smartindent
set nu
set guioptions-=T

set laststatus=2
set backspace=2

let g:airline_theme = 'pencil'
let g:airline#extensions#tabline#enabled = 1
colorscheme pencil
set background=light

let maplocalleader = ","
let g:pandoc#formatting#mode = 'hA'
let g:pandoc#formatting#textwidth = 74
let g:pandoc#modules#disabled = ["folding"]
let g:tex_conceal = "admg"
let g:pandoc#formatting#smart_autoformat_on_cursormove = 1
let g:pandoc#biblio#use_bibtool = 1
let g:pandoc#keyboard#wrap_cursor = 1

augroup limelight_pencil
    autocmd!
    autocmd ColorScheme * let g:limelight_conceal_ctermfg =
                            \ (&bg == 'dark') ? 'red' : 'darkgray'
augroup END

highlight clear SignColumn

set undofile
set list
set listchars=tab:▸\ ,eol:¬
nnoremap <up> <nop>
nnoremap <down> <nop>
nnoremap <left> <nop>
nnoremap <right> <nop>
inoremap <up> <nop>
inoremap <down> <nop>
inoremap <left> <nop>
inoremap <right> <nop>
inoremap jj <ESC>
nnoremap <F5> :GundoToggle<CR>
set textwidth=74

set splitbelow
set splitright

nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
